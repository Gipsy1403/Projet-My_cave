<!DOCTYPE html>
</html>
<html>
    <head>
        <meta charset="UTF-8">
	   <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
    
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    <header id="header">
			<nav>
			<a href={{path ("home")}}><img src="{{ asset('imglog/logo.png') }}" alt="logo"></a>
				<div class="menu_dropdown">
					<ul>
						<li><a href={{path('home')}}>Accueil</a></li>
						<li><a href="">Mes Caves</a></li>
						{# <li><a href={{path('explore')}}>Explorer</a></li> #}
						{% if not is_granted('ROLE_USER') %}
							<li><a href={{path('app_login')}}>Se connecter</a></li>
							<li><a href={{path('app_register')}}>S'inscrire</a></li>
							{% else %}
								<li><a href="">Ajouter</a></li>
								<li><a href={{path('app_logout')}}>Se déconnecter</a></li>
						{% endif %}
						{% if not is_granted('ROLE_ADMIN') %}
							{% else %}
								<li><a href="">Administrateur</a></li>
						{% endif %}
					</ul>
					<i class="fa-solid fa-bars"></i>
				</div>
			</nav>
		</header>
        {% block banner %}
	   	<div class="banner">
			<h1>Gérer votre Cave avec simplicité !</h1>
		</div>
	   {% endblock %}
        
	   {% block body %}{% endblock %}

	   {% block footer %}
	   	<footer>

			<div class="footbar">
				<a href={{path ("home")}}>Accueil</a>
				<a href="">Mes Caves</a>
				<a href="">Explorer</a>
			</div>
			<a href={{path ("home")}}><img src="{{ asset('imglog/logo-large-white.png') }}" alt="logo"></a>
			<div class="about">
				<p>A propos de My Cave</p>
				<a href="">Mentions légales</a>
			</div>
			<a href="">Nous contacter</a>
		</footer>
	   {% endblock %}
    </body>
</html>
